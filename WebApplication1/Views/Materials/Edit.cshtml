@model WebApplication1.Material

@{
    ViewData["Title"] = "Edit";
}

<h1>Змінити</h1>

<h4>Матеріал</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaterialCard" class="control-label"></label>
                <input asp-for="MaterialCard" class="form-control" />
                <span asp-validation-for="MaterialCard" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdGarbageType" class="control-label"></label>
                <select asp-for="IdGarbageType" class="form-control" asp-items="ViewBag.IdGarbageType"></select>
                <span asp-validation-for="IdGarbageType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Info" class="control-label"></label>
                <input asp-for="Info" class="form-control" />
                <span asp-validation-for="Info" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Повернутись</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
