@model IEnumerable<WebApplication1.Factory>

@{
    ViewData["Title"] = "Фабрики";
}


<h1>Фабрики</h1>

<form class="form-inline my-2 my-lg-0" asp-area="" asp-controller="Factories" asp-action="Index" method="POST">
    <input class="form-control mr-sm-2" type="text" placeholder="Search" name="search" value="@ViewData["currentFilter"]" id="search">
    <button class="btn btn-secondary my-2 my-sm-0" value="Search" type="submit">Search</button>
</form>

<p>
    <a asp-action="Create">Створити</a>
</p>
<div class="form-group">
    @using (Html.BeginForm("Import", "Factories", FormMethod.Post, new { enctype = "multipart/form-data", id = "frm-excel" }))
    {

        <div class="input-group mb-3">
            <div class="custom-file">
                <input type="file" class="custom-file-input" name="fileExcel" id="fileExcel">
                <label class="custom-file-label" for="fileExcel">Choose file</label>
            </div>
            <div class="input-group-append">
                <span class="input-group-text" id="">Upload</span>
            </div>
        </div>

    }
</div>
<div>
    <h3>Оберіть exel-файл для заватаження</h3>
    @using (Html.BeginForm("Import", "Factories", FormMethod.Post, new { enctype = "multipart/form-data", id = "frm-excel" }))
    {
        <div>
            Завантажте Excel-файл:
            <input type="file" name="fileExcel" id="fileExcel" />
            <div>
                <input type="submit" value="Завантажити" />
            </div>
        </div>
    }
</div>

<div>
    <h3>Завантаження інформації в файл</h3>
    <a asp-action="Export" asp-route-search="@ViewData["currentFilter"]">Завантажити</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Website)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Website)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Змінити</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Деталі</a> |
                    <a asp-action="GarbageTypes" asp-route-id="@item.Id">Типи сміття</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="container">
    <div id="chart1"></div>
</div>

@section scripts {
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

    <script>
        google.charts.load('current', { 'packages': ['corechart'] });
        google.charts.setOnLoadCallback(drawChart);

        function drawChart() {
            $.get('api/ChartFactoryGarbageType/JsonData', function (jsonData) {
                data = google.visualization.arrayToDataTable(jsonData, false);

                var option = {
                    title: "Типи сміття на фабриках",
                    width: 600,
                    height: 400,
                    bar: { groupWidth: "95%" },
                    legend: { position: 'top', maxLines: 3 },
                    isStacked: true,
                };
                chart = new google.visualization.ColumnChart(document.getElementById('chart1'));
                chart.draw(data, option);
            })
        }
    </script>
}

