@model LabWeb1.FactoryGarbageType

@{
    ViewData["Title"] = "Створити";
}

<h1>Створити</h1>

<h4>FactoryGarbageType</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdGarbageType" class="control-label"></label>
                <select asp-for="IdGarbageType" class="form-control" asp-items="ViewBag.IdGarbageTypes"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdFactory" class="control-label"></label>
                <select asp-for="IdFactory" class="form-control" asp-items="ViewBag.IdFactories"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@ViewBag.IdFactory">Повернутись</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
